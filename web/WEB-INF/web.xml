<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>Registro de actividades y tiempos</display-name>
    <servlet>
        <servlet-name>EmpleadoServlet</servlet-name>
        <servlet-class>com.proyectorat.servlet.EmpleadoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.proyectorat.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CargoServlet</servlet-name>
        <servlet-class>com.proyectorat.servlet.CargoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EntradaServlet</servlet-name>
        <servlet-class>com.proyectorat.servlet.EntradaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.proyectorat.servlet.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TipoServlet</servlet-name>
        <servlet-class>com.proyectorat.servlet.TipoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>com.proyectorat.servlet.UsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmpleadoServlet</servlet-name>
        <url-pattern>/EmpleadoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CargoServlet</servlet-name>
        <url-pattern>/CargoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EntradaServlet</servlet-name>
        <url-pattern>/EntradaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TipoServlet</servlet-name>
        <url-pattern>/TipoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/UsuarioServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>

</web-app>
